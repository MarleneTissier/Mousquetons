{% extends 'base.html.twig' %}
{% block content %}

    <div class="container-fluid">
        <ul class="row ariane">
            <li><a class="ArianeLien"  href={{ path('Home') }}>Acceuil</a></li>
            <li><a class="ArianeLien" >/ discussion précédente</a></li>
            <li><span class="ArianeSpan">/ nom du post</span></li>
        </ul>
    </div>

    <main>
        <!-- for -->
        <div class="commentaire">
            <div class="poster">
                <div class="avatar">
                    <img src="{{ asset("img/avatar.jpg") }}" alt="">
                </div>
                <div class="info">
                    <p>{{ discussion.user.username }}</p>
                    <p>DATE INSCRIPTION</p>
                </div>
            </div>
            <div class="content">
                <h2>{{ discussion.name }}</h2>
                <p>{{ discussion.FirstPost }}</p>
            </div>
        </div>

        <!--si connecté / futur formulaire -->
        <div class="reponse  col-10">
            {% if is_granted('ROLE_USER') %}

            {% else %}
                <p>Veuillez vous connecter pour répondre</p>
            {% endif %}
        </div>
        </div>
    </main>

{% endblock %}