                                <li class="col-md-6 text-center text-md-left">
                                    <h4>{{activiteFrance.name}}</h4>
                                    <p class="ArticleParagraph" >{{ activiteFrance.FirstPost }}</p>
                                </li>
                                <li class="d-none d-md-block col-1 text-center">
                                    <span class="ArticleSpan">{{ activiteFrance.user.username }}</span>
                                </li>
                                <li class="d-none d-md-block col-1 text-center">
                                    <span class="ArticleSpan">{{ activiteFrance.place.name }}</span>
                                </li>
                                <li class="d-none d-md-block col-1 text-center">
                                    <span class="ArticleSpan">{{ activiteFrance.NmbPos }}</span>
                                </li>
                                <li class="d-none d-md-block col-2 text-center">
                                    <span class="ArticleSpan">{{ activiteFrance.date|date('d-M-Y') }}</span>
