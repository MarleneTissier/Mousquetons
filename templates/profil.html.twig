{% extends 'base.html.twig' %}
{% block content %}

    <div class="userPrez">
        <div class="avatar">
                <div style="background-image: url('{{ asset('profilUser/avatar/'~app.user.profil.avatar) }}')"></div>
                <img src="{{ asset('profilUser/avatar/'~app.user.profil.avatar) }}" alt="" class="">
        </div>
        <div class="userInfo">
            <ul class="listeUserInfo">
                <li>pseudo : {{ app.user.username }}</li>
                <li>email : {{ app.user.email }}</li>
                <li>date d'inscription :</li>
                <li>id : {{ app.user.id }}</li>
            </ul>
        </div>
        <div class="description">
            <p class="paragrapheDescription">
                {% if Description is empty %}
                    Pas de description pour le moment
                {% else %}
                    {{ app.user.profil.description }}
                {% endif %}

            </p>
        </div>
    </div>
    <div class="updateProfil">
        <a class="bouttonUpProfil" href="{{ path('profilUpdate')}}">modifier son profil</a>
    </div>
    <div class="userCOntent">
        <div class="userParticipation">
            <!-- article crée / a créer -->
            <div class="userArticle">
                <div class="userArticleCreate">
                    <ul class="ArticleLiens">
                        <li class="ArticleLigne">
                            <ul class="row menu container-fluid justify-content-between align-items-center m-0 ArticleLiens">
                                <li class="col-md-6 text-center text-md-left">
                                    <h2>Les dernieres discussions crées</h2>
                                </li>
                                <li class="d-none d-md-block col-2 text-center">
                                    <span class="ArticleSpan">nombres de réponses</span>
                                </li>
                                <li class="d-none d-md-block col-2 text-center">
                                    <span class="ArticleSpan">date d'ajour du post</span>
                                </li>
                            </ul>
                        </li>
                        <hr>
                        <li class="ArticleLigne">
                            <!-- for pour récup les 3 derniers post -->

                            {% for discussion in discussions %}
                                <a class="ArticleLien" href="{{ path('post', {'id':discussion.id}) }}" >
                                    <ul class="row menu container-fluid justify-content-between align-items-center m-0 ArticleLiens">
                                        <li class="col-md-6 text-center text-md-left">
                                            <h2>{{discussion.name}}</h2>
                                            <p class="ArticleParagraph" >{{ discussion.FirstPost }}</p>
                                        </li>
                                        <li class="d-none d-md-block col-2 text-center">
                                            <span class="ArticleSpan">{{discussion.date|date('d-M-Y')}}</span>
                                        </li>
                                    </ul>
                                </a>
                            {% endfor %}
                        </li>

                    </ul>
                </div>
               <div class="userCreateArticle">
                   <a class="bouttonProfil" href="{{ path('formulaireDicussion') }}">Créer une discussion</a>
               </div>
            </div>


            <!-- galerie crée / a créer -->
            <div class="userGalerie">
                <div class="userGalerieCreate">
                    <ul class="GalerieLiens">
                        <li class="ArticleLigne">
                            <ul class="row menu container-fluid justify-content-between align-items-center m-0 ArticleLiens">
